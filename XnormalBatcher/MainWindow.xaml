                            <TextBox Grid.Row="1" Margin="0 2 0 0" Text="{Binding NewTermCage}"/>
                            <Button Grid.Row="1" Grid.Column="1" Width="22" Height="22" Command="{Binding AddTerm}" CommandParameter="cage">
                                <fa5:FontAwesome Icon="Solid_Plus" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Button>
                        </Grid>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Border>
</Window>
